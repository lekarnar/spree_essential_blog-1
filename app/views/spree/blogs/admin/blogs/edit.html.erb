<%#= render :partial => 'spree/admin/shared/configuration_menu' %>

<h1>Edit Blog</h1>

<% if @blog.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @blog %>
<% end %>

<%= form_for([:admin, @blog]) do |f| %>
  <%= render "form", :form => f %>
  <p class="form-buttons" style="margin-top:20px;">
    <%= button Spree.t("update") %> <%= Spree.t('or') %> <%= link_to Spree.t('cancel'), collection_url, class: "btn btn-danger" %>
  </p>
<% end %>

<%= render "spree/blogs/admin/shared/select_configuration_tab" unless request.xhr? %>
