<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Categories", post: @post} %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @object } %>

<%= form_for([:admin, @post, @object], :url => admin_post_category_path(@post, @object.id)) do |form| %>
  <fieldset>
    <legend><%= t(".edit_category") %></legend>
    <%= render "form", :form => form %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
