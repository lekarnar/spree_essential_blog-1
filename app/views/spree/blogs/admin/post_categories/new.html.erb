<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Categories", post: @post} unless request.xhr? %>


<% if @object.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @object %>
<% end %>
<%= form_for([:admin, @object], :html => { :multipart => true }) do |form| %>
  <fieldset>
    <legend><%= t("new_category") %></legend>
    <%= render "form", :form => form %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
