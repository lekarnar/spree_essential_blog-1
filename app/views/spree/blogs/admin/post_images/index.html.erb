<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Images", post: @post} %>

<div id="images"></div>
<br/>

<table class="index sortable table table-bordered" data-sortable-link="<%= update_positions_admin_post_images_url(@post) -%>">
  <thead>
    <tr>
      <th><%= Spree.t("thumbnail") %></th>
      <th><%= Spree.t("alt_text") %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @post.images.each do |image| %>
      <tr id="<%= dom_id(image) %>" class="<%= cycle('odd', 'even') %>">
        <td><span class="handle">&nbsp;</span>&nbsp; <%= link_to(image_tag(image.attachment.url(:mini)), image.attachment.url(:large)) %></td>
        <td><%= image.alt %></td>
        <td class="actions align-center">
          <%= link_to_edit_url edit_admin_post_image_url(@post, image), no_text: true %>
          &nbsp;
          <%= link_to_delete image, {:url => admin_post_image_url(@post, image), no_text: true }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to Spree.t("new_image"), new_admin_post_image_url(@post), :id => "new_image_link", icon: 'icon-plus', class: 'btn-success' %>
  </li>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function(){

      $('#new_image_link').click(function (event) {
        event.preventDefault();
        $(this).hide();
        $.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){
            $('#images').html(r);
            $('#new_post_image').closest('#main-part').css('margin-left', '15px');
          }
        });
      });
    });
  </script>
<% end %>
