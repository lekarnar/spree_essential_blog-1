<div class="post eightContOnBig fw300" data-hook="post-show">
  <div class="content">
    <div class="post-title twelve columns eightOnBig" data-hook="post-show-title">
      <% if @blog.permalink == "blog" %><h5><%= h l(@post.posted_at, :format => :date_only).gsub(/\s0/, ' ') %></h5><% end %>
      <h1><%=h @post.title %><% if @post.expires_at != nil %> <span class="special dib button b0 c0 sale pink" style="font-size:12px;"><% if @post.expired? %>poteklo<% elsif @post.expires_at %>do <%= l @post.expires_at, :format => :date_only %><% end %></span><% end %></h1>
    </div>

    <% if @post.has_images? %>
      <div class="post-images product twelve columns eightOnBig" data-hook="post-show-image">
        <% @post.images.each_with_index do |image, index| %>
          <p><%= image_tag(image.attachment.url(:medium), :alt => ((image.alt != "") ? image.alt : "#{@post.title} - Slika #{index + 1}")) %></p>
        <% end %>
        <%# if @post.expired? %>
          <!-- <span class="special sale oh" style="font-size: 81.25%; right:auto; left:10px; top:10px;">poteklo</span> -->
        <%# elsif @post.expires_at %>
          <!-- <span class="special sale oh" style="font-size: 81.25%; right:auto; left:10px; top:10px;">do <%#= l @post.expires_at, :format => :date_only %></span> -->
        <%# end %>

      </div>
    <% end %>

    <div class="post-body twelve columns eightOnBig" data-hook="post-show-body">
      <%= @post.rendered_body %>
      <% if @post.expired? %>
        <p class="i">Akcija je potekla.</p>
      <% end %>
    </div>

    <%# tags =  @post.tags.collect{|tag| link_to(tag.name, search_posts_path(@blog, tag.name)) } %>
