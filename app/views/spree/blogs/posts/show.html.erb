    <%# end %>
    <div class="post-tags twelve columns eightOnBig mb1lh" data-hook="post-share">
      <ul class="social-likes social-likes_single" data-single-title=" ">
        <li class="facebook" title="Objavi izdelek na Facebooku">Facebook</li>
        <li class="twitter" title="Objavi povezavo na Twitter">Twitter</li>
        <li class="plusone" title="Objavi povezavo na Google+">Google+</li>
        <li class="pinterest" title="Objavi sliko na Pinterest" data-media="">Pinterest</li>
      </ul>
    </div>
  </div>

  <% unless @post.products.empty? %>
    <%#= render 'spree/shared/carousel', :products => @post.products %>
    <% if @post.products_title != "" %>
      <h3 class="twelve columns mt1lh" style="line-height:30px;"><%= @post.products_title %></h3>
    <% end %>
  <div class="pr featuredProducts fl fw400 mb1lh">
    <div class="twelve columns eightOnBig" style="border-top:2px solid #d0d2d1; padding-top:8px;"></div>


    <ul class="products asRows fl mt1lh mb1lh">
        <% @post.products.each do |product| %>
